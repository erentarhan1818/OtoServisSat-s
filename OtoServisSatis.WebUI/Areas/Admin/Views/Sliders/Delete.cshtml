@model Slider

@{
    ViewData["Title"] = "Slide Sil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Slide Sil</h1>

<h3>Sİlmek istiyormusunuz ?</h3>
<div>
    <h4>Slide Resmi</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Baslık)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Baslık)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Acıklama)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Acıklama)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Resim)
        </dt>
        <dd class = "col-sm-10">
            <img src="/Img/Slider/@Model.Resim" alt="" height="130" style="border-radius:21px; margin-top: 20px" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Link)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Link)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />  - 
        <a class="btn btn-primary mt-4"style="margin-bottom:20px" asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>

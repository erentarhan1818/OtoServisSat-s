@model OtoServisSatis.Entities.Slider

@{
    ViewData["Title"] = "Slide Düzenle";

    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Slide Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Resim" />
            <div class="form-group">
                <label asp-for="Baslık" class="control-label"></label>
                <input asp-for="Baslık" class="form-control" />
                <span asp-validation-for="Baslık" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acıklama" class="control-label"></label>
                <input asp-for="Acıklama" class="form-control" />
                <span asp-validation-for="Acıklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resim" class="control-label"></label>
                <input asp-for="Resim" class="form-control"  type="file"/>
                <span asp-validation-for="Resim" class="text-danger"></span>
                <img src="/Img/Slider/@Model.Resim"  alt=""  height="75" style="border-radius:21px; margin-top: 20px" />
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a class="btn btn-primary mt-4" style="margin-bottom:20px" asp-action="Index">Listeye Geri Dön</a>
</div>

